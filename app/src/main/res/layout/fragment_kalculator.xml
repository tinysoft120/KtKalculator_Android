<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        app:layout_constraintDimensionRatio="H,320:80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivSearchHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_search_header"
        app:layout_constraintBottom_toBottomOf="@+id/btnSearch"
        app:layout_constraintDimensionRatio="W,52:44"
        app:layout_constraintStart_toStartOf="@+id/btnSearch"
        app:layout_constraintTop_toTopOf="@+id/btnSearch"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/ivSearchBody"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_search_body"
        app:layout_constraintBottom_toBottomOf="@+id/btnSearch"
        app:layout_constraintEnd_toStartOf="@+id/ivSearchFooter"
        app:layout_constraintStart_toEndOf="@+id/ivSearchHeader"
        app:layout_constraintTop_toTopOf="@+id/btnSearch"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/ivSearchFooter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_search_footer"
        app:layout_constraintBottom_toBottomOf="@+id/btnSearch"
        app:layout_constraintDimensionRatio="W,6:44"
        app:layout_constraintEnd_toEndOf="@+id/btnSearch"
        app:layout_constraintTop_toTopOf="@+id/btnSearch"
        tools:ignore="ContentDescription" />
    <ImageButton
        android:id="@+id/btnSearch"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculated_gold_price_height"
        android:layout_marginStart="@dimen/main_padding"
        android:layout_marginTop="@dimen/logo_vertical_space"
        android:background="@android:color/transparent"
        app:layout_constraintDimensionRatio="W,162:44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/tvGoldPrice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="1dp"
        android:paddingEnd="1dp"
        android:lines="1"
        android:gravity="start|center_vertical"
        android:textColor="@color/black"
        android:textAppearance="@style/TextViewBody1"
        app:layout_constraintBottom_toBottomOf="@+id/ivSearchBody"
        app:layout_constraintEnd_toEndOf="@+id/ivSearchBody"
        app:layout_constraintStart_toStartOf="@+id/ivSearchBody"
        app:layout_constraintTop_toTopOf="@+id/ivSearchBody"
        tools:text="1234.00"/>

    <ImageView
        android:id="@+id/ivMeasureHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_drop_header"
        app:layout_constraintBottom_toBottomOf="@+id/btnMeasure"
        app:layout_constraintDimensionRatio="W,6:44"
        app:layout_constraintStart_toStartOf="@+id/btnMeasure"
        app:layout_constraintTop_toTopOf="@+id/btnMeasure"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/ivMeasureBody"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_drop_body"
        app:layout_constraintBottom_toBottomOf="@+id/btnMeasure"
        app:layout_constraintEnd_toStartOf="@+id/ivMeasureFooter"
        app:layout_constraintStart_toEndOf="@+id/ivMeasureHeader"
        app:layout_constraintTop_toTopOf="@+id/btnMeasure"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/ivMeasureFooter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_drop_footer"
        app:layout_constraintBottom_toBottomOf="@+id/btnMeasure"
        app:layout_constraintDimensionRatio="W,52:44"
        app:layout_constraintEnd_toEndOf="@+id/btnMeasure"
        app:layout_constraintTop_toTopOf="@+id/btnMeasure"
        tools:ignore="ContentDescription" />
    <ImageButton
        android:id="@+id/btnMeasure"
        android:layout_width="0dp"
        android:layout_height="@dimen/calculated_gold_price_height"
        android:layout_marginEnd="@dimen/main_padding"
        android:layout_marginTop="@dimen/logo_vertical_space"
        android:background="@android:color/transparent"
        app:layout_constraintDimensionRatio="W,162:44"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/tvMeasurementValue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:lines="1"
        android:gravity="start|center_vertical"
        android:textColor="@color/black"
        android:textAppearance="@style/TextViewBody1"
        app:layout_constraintEnd_toEndOf="@+id/ivMeasureBody"
        app:layout_constraintStart_toStartOf="@+id/ivMeasureBody"
        app:layout_constraintBottom_toBottomOf="@+id/ivMeasureBody"
        app:layout_constraintTop_toTopOf="@+id/ivMeasureBody"
        tools:text="D.W.T"/>

    <TextView
        android:id="@+id/tvMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:gravity="end|center_vertical"
        android:lines="1"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textColor="@color/white"
        android:text="@string/strMeasurement_"
        android:textAppearance="@style/TextViewNormal"
        app:layout_constraintBottom_toBottomOf="@+id/ivMeasureBody"
        app:layout_constraintEnd_toStartOf="@+id/ivMeasureHeader"
        app:layout_constraintTop_toTopOf="@+id/ivMeasureBody"
        tools:text="Measurement:" />

    <ImageButton
        android:id="@+id/btnCalculate"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="40dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:background="@drawable/btn_calculate_sel"
        app:layout_constraintDimensionRatio="W,102:40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/btnClear"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_clear_sel"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="W,102:40"
        app:layout_constraintEnd_toStartOf="@id/btnCalculate"
        tools:ignore="ContentDescription" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tableview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/main_padding"
        android:layout_marginVertical="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMeasurement"
        app:layout_constraintBottom_toTopOf="@+id/btnClear" />

    <View
        android:id="@+id/vOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray_trans"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/llDropdown"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/line_size"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/ivMeasureFooter"
        app:layout_constraintEnd_toEndOf="@+id/ivMeasureFooter">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>